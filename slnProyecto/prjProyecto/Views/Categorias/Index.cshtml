@model IEnumerable<prjProyecto.Models.Categoria>

@{
    ViewBag.Title = "Index";
}

<h2 style="color:aliceblue">Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th style="color: aliceblue">
            @Html.DisplayNameFor(model => model.CategoriaNombre)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td style="color: aliceblue">
            @Html.DisplayFor(modelItem => item.CategoriaNombre)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.CategoriaId }, new { @class = "text-danger" }) |
            @Html.ActionLink("Details", "Details", new { id=item.CategoriaId }, new { @class = "text-danger" }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.CategoriaId }, new { @class = "text-danger" })
        </td>
    </tr>
}

</table>
