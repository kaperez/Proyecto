@model IEnumerable<prjProyecto.Models.Producto>

@{
    ViewBag.Title = "Index";
}

<h2 style="color:aliceblue">Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th style="color:aliceblue">
            @Html.DisplayNameFor(model => model.Categoria.CategoriaNombre)
        </th>
        <th style="color:aliceblue">
            @Html.DisplayNameFor(model => model.ProductoDescripcion)
        </th>
        <th style="color:aliceblue">
            @Html.DisplayNameFor(model => model.ProductoCantidad)
        </th>
        <th style="color:aliceblue">
            @Html.DisplayNameFor(model => model.ProductoPrecio)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td style="color:aliceblue">
            @Html.DisplayFor(modelItem => item.Categoria.CategoriaNombre)
        </td>
        <td style="color:aliceblue">
            @Html.DisplayFor(modelItem => item.ProductoDescripcion)
        </td>
        <td style="color:aliceblue">
            @Html.DisplayFor(modelItem => item.ProductoCantidad)
        </td>
        <td style="color:aliceblue">
            @Html.DisplayFor(modelItem => item.ProductoPrecio)
        </td>
        <td style="color:aliceblue">
            @Html.ActionLink("Edit", "Edit", new { id=item.ProductoId }, new { @class = "text-danger" }) |
            @Html.ActionLink("Details", "Details", new { id=item.ProductoId }, new { @class = "text-danger" }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.ProductoId }, new { @class = "text-danger" })
        </td>
    </tr>
}

</table>
